[Unit]
Description=Apache Zookeeper Service
After=network.target

[Service]
Type=simple
User={{ zookeeper_user }}
Group={{ zookeeper_group }}
ExecStart={{ zookeeper_install_dir }}/apache-zookeeper-{{ zookeeper_version }}-bin/bin/zkServer.sh start-foreground
Restart=on-abnormal
PIDFile=/var/run/zookeeper/zookeeper_server.pid

[Install]
WantedBy=multi-user.target
